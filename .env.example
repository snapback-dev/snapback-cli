# SnapBack CLI Environment Configuration
# CLI-specific environment variables for command-line interface

# =============================================================================
# CLI BASIC CONFIGURATION
# =============================================================================

# CLI Application Settings
CLI_NAME=snapback
CLI_VERSION=0.1.0
CLI_DEFAULT_COMMAND=help

# Output Configuration
CLI_OUTPUT_FORMAT=pretty
CLI_COLORS_ENABLED=true
CLI_EMOJI_ENABLED=true
CLI_VERBOSE=false

# =============================================================================
# USER INTERFACE SETTINGS
# =============================================================================

# Interactive Mode
CLI_INTERACTIVE_MODE=true
CLI_CONFIRM_DESTRUCTIVE_ACTIONS=true
CLI_SHOW_PROGRESS_BARS=true

# Terminal Configuration
CLI_TERMINAL_WIDTH=80
CLI_TERMINAL_HEIGHT=24
CLI_PAGER=less

# =============================================================================
# COMMAND CONFIGURATION
# =============================================================================

# Default Command Options
DEFAULT_TIMEOUT_MS=30000
DEFAULT_MAX_FILES=1000
DEFAULT_OUTPUT_DIR=./snapback-output

# Analysis Commands
ANALYZE_MAX_FILE_SIZE_MB=10
ANALYZE_PARALLEL_PROCESSING=true
ANALYZE_INCLUDE_TESTS=false

# Checkpoint Commands
CHECKPOINT_AUTO_MESSAGE=true
CHECKPOINT_INCLUDE_UNSTAGED=false
CHECKPOINT_MAX_FILES=500

# =============================================================================
# FILE SYSTEM CONFIGURATION
# =============================================================================

# Working Directory
CLI_WORKING_DIR=./
CLI_CONFIG_DIR=~/.snapback
CLI_CACHE_DIR=~/.snapback/cache

# File Patterns
INCLUDE_PATTERNS=**/*.{js,ts,jsx,tsx,json,md}
EXCLUDE_PATTERNS=node_modules/**,dist/**,.git/**,coverage/**

# File Limits
MAX_FILE_SIZE_MB=5
MAX_TOTAL_SIZE_MB=100

# =============================================================================
# CONFIGURATION MANAGEMENT
# =============================================================================

# Config File Settings
CONFIG_FILE_NAME=.snapback.config.js
CONFIG_AUTO_DETECT=true
CONFIG_INHERIT_PARENT=true

# Config Precedence (highest to lowest)
# 1. Command line flags
# 2. Environment variables
# 3. Config file
# 4. Defaults

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# CLI Logging
CLI_LOG_LEVEL=info
CLI_LOG_FILE=~/.snapback/cli.log
CLI_LOG_ROTATION=true
CLI_LOG_MAX_SIZE_MB=10

# Command History
CLI_HISTORY_ENABLED=true
CLI_HISTORY_FILE=~/.snapback/history
CLI_HISTORY_MAX_ENTRIES=1000

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================

# Core Package Integration
CORE_INTEGRATION_ENABLED=true
CORE_PACKAGE_PATH=./packages/core

# Git Integration
GIT_INTEGRATION_ENABLED=true
GIT_AUTO_DETECT_REPO=true
GIT_REQUIRE_CLEAN_WORKING_DIR=false

# Editor Integration
EDITOR=code
DIFF_TOOL=code --diff
MERGE_TOOL=code

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Processing Limits
MAX_CONCURRENT_OPERATIONS=4
OPERATION_TIMEOUT_MS=30000
MEMORY_LIMIT_MB=256

# Caching
CACHE_ENABLED=true
CACHE_TTL_MS=300000
CACHE_MAX_SIZE=100

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# HTTP Settings
HTTP_TIMEOUT_MS=10000
HTTP_RETRY_ATTEMPTS=3
HTTP_USER_AGENT=snapback-cli/0.1.0

# Proxy Settings
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# =============================================================================
# ERROR HANDLING
# =============================================================================

# Error Reporting
ERROR_REPORTING_ENABLED=false
ERROR_STACK_TRACES=true
ERROR_SUGGESTIONS=true

# Exit Codes
EXIT_ON_ERROR=true
ERROR_EXIT_CODE=1
SUCCESS_EXIT_CODE=0

# =============================================================================
# DEVELOPMENT MODE
# =============================================================================

# Development Settings
DEV_MODE=false
DEV_VERBOSE_LOGGING=false
DEV_SKIP_CONFIRMATIONS=false

# Debug Settings
DEBUG_CLI=false
DEBUG_COMMANDS=false
DEBUG_PERFORMANCE=false

# =============================================================================
# TELEMETRY SETTINGS
# =============================================================================

# CLI Telemetry
TELEMETRY_CLI_ENABLED=true
TELEMETRY_TRACK_COMMANDS=true
TELEMETRY_TRACK_ERRORS=true
TELEMETRY_TRACK_PERFORMANCE=false

# Privacy Settings
TELEMETRY_ANONYMOUS=true
TELEMETRY_COLLECT_PATHS=false

# =============================================================================
# UPDATE CONFIGURATION
# =============================================================================

# Auto-update Settings
AUTO_UPDATE_CHECK=true
AUTO_UPDATE_FREQUENCY_HOURS=24
UPDATE_CHANNEL=stable

# Update Sources
UPDATE_REGISTRY=npm
UPDATE_ENDPOINT=https://registry.npmjs.org